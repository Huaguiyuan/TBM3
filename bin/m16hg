#!/bin/bash

echo
echo 'output:' $2
echo

g++		-std=c++11 -O3  -DADD_ -fopenmp -DMAGMA_SETAFFINITY -DHAVE_CUBLAS -DMIN_CUDA_ARCH=300 \
		-Wl,-rpath,/home/tai/opt/magma/lib\
		-I/usr/local/cuda/include\
		-I/home/tai/opt/magma/include \
		-I/home/tai/opt/magma/control \
		-I/home/tai/Dropbox/codes/source/lift/include \
		-I/home/tai/Dropbox/codes/source/mat/include \
		$1 -o $2\
		-L/home/tai/opt/magma/lib -lmagma \
		-L/usr/local/cuda/lib64\
		-L/usr/lib/lapack/\
		-L/usr/lib/atlas-base/lib \
		-llapack -lf77blas -lcblas -latlas -lcublas -lcudart -lstdc++ -lm -lgfortran -lifcore
